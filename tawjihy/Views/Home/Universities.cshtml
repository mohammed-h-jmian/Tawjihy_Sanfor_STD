@model List<University>
@{
    ViewData["Title"] = "المؤسسات";
}
@section Css{
    <link rel="stylesheet" type="text/css" href="~/assets/vendor/datatables/dataTables.bootstrap4.css">
    <link rel="stylesheet" type="text/css" href="~/css/styleTable.css">
}
@section Scripts{
    <script src="~/assets/vendor/datatables/dataTables.bootstrap4.js"></script>
    <script src="~/assets/vendor/datatables/jquery.dataTables.js"></script>
    <script src="~/js/admin-datatables.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}
<section class="bg-overlay bg-overlay-gradient pb-0">
    <div class="bg-section">
        <img src="~/assets/images/shabiba.jpg" alt="Background" />
    </div>
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12">
                <div class="page-title title-1 text-center" >
                    <div class="title-bg">
                        <h2 style="font-family: Cairo;">المؤسسات</h2>
                    </div>
                    <ol class="breadcrumb">
                        <li>
                            <a href="~/" style="font-family: Cairo;font-size:15px;">الرئيسية</a>
                        </li>
                        <li class="active" style="font-family: Cairo;font-size:15px">المؤسسات</li>
                    </ol>
                </div>
                <!-- .page-title end -->
            </div>
            <!-- .col-md-12 end -->
        </div>
        <!-- .row end -->
    </div>
    <!-- .container end -->
</section>

