<!-- Shortcode #2
============================================= -->
<section id="shortcode-2" style="background-color:#f9f9f9 !important; padding:20px" class="shortcode-2 about-home text-center-xs text-center-sm">
    <div class="container">
        <div class="card mb-3">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered sortable" id="dataTable" width="100%" style="background-color:#1f1f1f" cellspacing="0" dir="rtl">
                        <thead>
                            <tr style="font-family: Cairo;background-color:#f3b200;color:#1f1f1f; ">
                                <th style="text-align:center">المؤسسة</th>
                                <th style="text-align:center">الرابط</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr style="font-family: Cairo;background-color:#f3b200;color:#1f1f1f; ">
                                <th style="text-align:center">المؤسسة</th>
                                <th style="text-align:center">الرابط</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @if (Model != null)
                            {

                                @foreach (var univ in Model)
                                {
                                    <tr>

                                        <td style="text-align:center;color:#f3b200;font-weight:600 ">@univ.Name</td>
                                        <td style="text-align:center">
                                            <a href="@univ.URL" target="_blank" style="font-family: Cairo;color:#fff; "> تواصل </a>
                                            
                                            </td>
                                    </tr>
                                }
                            }
                            else
                            {
                            @ViewBag.Message
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>


    </div>
    <!-- .container end -->
</section>
